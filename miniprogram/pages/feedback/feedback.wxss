/* miniprogram/pages/feedback/feedback.wxss */
page{
  width: 100%;
  height: 100%;
}

.feedback-area{
  display: block;
  width: 600rpx;
  height: 300rpx;
  margin:auto;
  margin-top: 25%;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 0 20px #DDDDDD;
  color: rgb(46, 46, 46);
}

.guide-text{
  display: block;
  width: 90%;
  margin: auto;
  margin-top: 50rpx;
  font-size: 50rpx;
  color: rgb(68, 68, 68);
}

.submit-button{
    display: block;
    margin: auto;
    margin-top: 25%;
    width: 70%;
    text-align: center;
    border-radius: 10%  / 50% ;
    line-height: 100rpx;
    background-image: linear-gradient(120deg, #84fab0 0%, #8fd3f4 100%);
    font-size: 35rpx;
    color: white;
    letter-spacing: 0.5rem;
    font-weight: bold;
}